        hairStyleContent = ['            ________________\n', '          /                 \\\n',
                            '         /         ^         \\\n', '        /         / \\         \\\n',
                            '   ^‚Äî‚Äî‚Äî          /   \\         ‚Äî‚Äî‚Äî^\n', '   \\____________/     \\___________/\n']
