    global hairStyleContent
    if answers[0] == 'a':
        hairStyleContent = ['            ________________\n', '           /                \\\n',
                            '          /                  \\\n', '         /                    \\\n',
                            '        /                      \\\n', '        ‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî\n']
